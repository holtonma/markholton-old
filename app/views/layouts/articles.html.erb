			<div class="featurebox"><%= render :partial => "home/sponsors" %></div>
			<div class="featurebox"><%= render :partial => "home/schedule_2009" %></div>
		</div>
		
    <div id="poweredby">
      <a href="http://www.MarkHolton.com/"><%= image_tag("optimist.png", :alt => "MarkHolton.com") %></a>
